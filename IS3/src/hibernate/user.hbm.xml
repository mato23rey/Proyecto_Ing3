<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
	<class name="hibernate.User" table="USER">
		<id column="ID" name="id" type="integer" />
		<property column="EMAIL" name="email" type="string" />
		<property column="PASSWORD" name="password" type="string" />
		<property column="VALIDATIONCODE" name="validationCode" type="string" />
		<property column="ACTIVATED" name="activated" type="boolean" />

	</class>
</hibernate-mapping>